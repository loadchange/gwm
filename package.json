{
  "name": "gwm",
  "version": "0.5.1",
  "description": "generate watermark",
  "keywords": [],
  "type": "module",
  "main": "dist/gwm.umd.js",
  "module": "dist/gwm.es.js",
  "typings": "dist/types/gwm.d.ts",
  "files": [
    "dist"
  ],
  "author": "LoadChange <soocto@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loadchange/gwm.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .ts src test",
    "lint:fix": "eslint --ext .ts src test --fix",
    "build": "vite build",
    "start": "vite",
    "type-check": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/types/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vite-plugin-dts": "^4.5.3",
    "vitepress": "^1.6.3"
  }
}
